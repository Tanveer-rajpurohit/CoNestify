{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "env": ["DATABASE_URL", "NODE_ENV","JWT_SECRET","GOOGLE_CLIENT_ID","GOOGLE_CLIENT_SECRET","JWT_SECRET","NEXT_PUBLIC_GOOGLE_CLIENT_ID"],
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "inputs": [".env*"],
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    
    "ws-server#build": {
      "outputs": ["apps/ws-server/dist/**"]
    },
    "ws-server#dev": {
      "cache": false,
      "persistent": true
    }
  }
}
